<div>
  <h3><%= @question.title %></h3>

  <p><%= @question.content %>
<%= button_to 'Delete', question_path(@question), method: :delete %>
<%= button_to 'Edit', edit_question_path(@question), method: :get %></p>
</div>

<div>
  <% @answers.each do |answer| %>
    <p>Title: <%= answer.title %></p>
    <p>Content: <%= answer.content %></p>
    <p><%= button_to 'Delete', question_answer_path(@question, answer.id), method: :delete %>
   <%= button_to 'Edit', edit_question_answer_path(@question, answer.id), method: :get %></p>
  <% end %>
</div><br>


<div>
  <h2>Add answers</h2>
  <%= form_for [@question, @answer] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.submit "Submit an answer" %>
  <% end %>
</div>

<p><%= button_to 'Back to Home Page', questions_path, method: :get %></p>
