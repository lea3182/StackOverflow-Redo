<h3><%= @question.title %></h3>

<p><%= @question.content %></p>

<div>
  <% @answers.each do |answer| %>
    <%= answer.title %> :
    <%= answer.content %><br>
  <% end %>
</div><br>

<%= link_to 'Delete', question_path(@question), method: :delete %>

<div>
  <%= form_for [@question, @answer] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.submit "Submit an answer" %>
  <% end %>
</div>
